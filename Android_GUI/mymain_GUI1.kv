    	    do_default_tab: False
    	    tab_width: self.parent.width / 2
    	    pos_hint:{"x": 0, "top":0.65}
            
    	    TabbedPanelItem:
    		    text:"My Portfolio"
                
    		    FloatLayout:
                    
    			    Label:
    			        text:"User name:"
    				    size_hint:0.5, 0.05
    				    font_size: 15
                        pos_hint:{"x":0, "top":0.85}
    			    TextInput:
    				    id: email
    				    multiline: False
    				    size_hint: 0.25, 0.05
    				    pos_hint:{"x":0.40, "top":0.85}
    			    Label:
    			        text:"Password:"
    				    size_hint:0.5, 0.05
    				    pos_hint:{"x":0, "top":0.75}
    				    font_size: 15
    			    TextInput:
    			        password: True
    				    id: passw
    				    multiline: False
    				    size_hint: 0.25, 0.05
    				    pos_hint:{"x":0.40, "top":0.75}
    			    Button:
    				    text: "Login"
        			    size_hint:0.25, 0.05
        			    pos_hint:{"x":0.40, "top":0.65}
        			    on_release:
        			        app.root.current = "second"
            			    root.manager.transition.direction = "left"
            	    Button:
            	        text: "Don't have an account? SignUp"
            	        pos_hint:{"x":0.40, "top":0.55}
            	        size_hint:0.25, 0.05
            	        on_release: Factory.CreateAccountWindow().open()
    	    TabbedPanelItem:
    		    text: "Finanace Home"

                ScrollView:
                    do_scroll_x: False
                    do_scroll_y: True
                    MyGrid1:
                        cols: 6
                        spacing: '1dp'
<CreateAccountWindow@Popup>:
    uname : uname
    email: email
    passw: passw
    cpassw: cpassw
    auto_dismiss: False
    size_hint: 0.4,0.75
    title: "Create an account"
    bold: True
    FloatLayout:
        cols:1
        FloatLayout:
            Label:
                text: "Name"
                size_hint: 0.15, 0.07
                pos_hint: {"x":1, "top": 1.25}
                font_size: 15
            TextInput:
    			id: uname
    			multiline: False
    			font_size: 12
    			size_hint: 0.35, 0.1
    			pos_hint:{"x":1.25, "top":1.25}
    	    Label:
                text: "Email Id"
                size_hint: 0.15, 0.07
                pos_hint: {"x":1, "top": 1.10}
                font_size: 15
            TextInput:
    			id: email
    			text: "email"
    			multiline: False
    			font_size: 12
    			size_hint: 0.35, 0.1
    			pos_hint:{"x":1.25, "top":1.10}
            Label:
                text: "Password"
                size_hint: 0.15, 0.07
                pos_hint: {"x":1, "top":0.95}
                font_size: 15
            TextInput:
                password: True
    			id: passw
    			font_size: 12
    			multiline: False
    			size_hint: 0.35, 0.1
    			pos_hint:{"x":1.25, "top":0.95}
            Label:
                text: "Confirm Password"
                size_hint: 0.15, 0.08
                pos_hint: {"x":1, "top":.70}
                font_size: 15
            TextInput:
                font_size: 12
                password: True
    			id: cpassw
    			multiline: False
    			size_hint: 0.35, 0.1
    			pos_hint:{"x":1.25, "top":.70}
            Button:
                text: "SignUp"
                size_hint: 0.35, 0.1
                pos_hint: {"x":1.25, "top":0.55}
                on_release:
                    root.submit()
                    root.dismiss()
